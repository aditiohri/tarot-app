<%- include('../partials/header') %>
    <% if (!card) { %>
        <form action="/readings" method="POST">
            <label>
               <p>What would you like to ask?</p>
            </label>  
            <input type="text" name="question">
            <input type="submit" value="Pull a card">
        </form>
    <% } else { %>
        <div class="readings-nav">
            <%= question %>
            <%= card %>
            <%= cardMeaning %>
            <%= cardDescription %>
        </div>    
        <form method="POST" action="/readings/<%= readingId %>?_method=PUT">
            <button>Save Reading</button>
        </form>
    <% } %>
    
<%- include('../partials/footer') %>
