<%- include('../partials/header') %>
<table>
    <% if (readings.length === 0) { %>
        <p>You haven't done any readings yet! <a href="/readings/new">Click here to start.</a></p>
        <% } else { %>
        <% readings.forEach(function(r) { %>
                <thead>
                <th>Date Created</th>
                <th>Question</th>
                <th>Card Name</th>
                <th>Full Reading Link</th>
                <th>Edit Reading</th>
                <th>Delete Reading</th>
                </thead>
                <tbody>
                    <tr>
                    <td><%= r.createdAt %></td>
                    <td><%= r.question %></td>
                    <td><%= r.name %></td>
                    <td><a href="/readings/<%= r._id %>">See Full Reading</a></td>
                    <td> 
                        <form action="/readings/<%= r._id %>/edit" method="GET"> 
                            <button type="submit">*</button>
                    </form>
                    </td>
                    <td>
                    <form action="/readings/<%= r._id %>?_method=DELETE" method="POST">
                        <button type="submit">x</button>
                    </form>  
                    </td>                  
                    </tr>
                </tbody>
                <% }) %>
                <form action="/readings?_method=DELETE" method="POST">
                    <td><button type="submit">Delete All Readings</button></td>
                </form> 
        <% } %>
        </table>
<%- include('../partials/footer') %>
